@model List<Person>
    @{
        ViewData["Title"] = "Home Page";
    }

    <div class="text-center" style="display: block; background-color:darkgray">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Отчество</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <th scope="row">@p.Id</th>
                        <td>@p.LastName</td>
                        <td>@p.FirstName</td>
                        <td>@p.MiddleName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr />
    <div class="row" style="margin-left: auto">
        <a href="Person/Create" class="btn btn-primary">Создать</a>
    </div>
    <hr />

    <form asp-controller="Person" asp-action="FindById" method="get" style="margin-bottom: 8px;">
        <div class="row">
            <div class="col-md-2">Id</div>
            <div class="col-md-4">
                <input required name="id" class="form-control" type="text" />
            </div>
            <button class="btn btn-success" type="submit">Поиск</button>
        </div>
    </form>

    <form asp-controller="Person" asp-action="FindByName" method="get" style="margin-bottom: 8px;">
        <div class="row">
            <div class="col-md-2">ФИО (без пробела)</div>
            <div class="col-md-4">
                <input required name="fullName" class="form-control" type="text" />
            </div>
            <button class="btn btn-success" type="submit">Поиск</button>
        </div>
    </form>
