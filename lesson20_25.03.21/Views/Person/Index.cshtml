@model List<Person>
    @{
        ViewData["Title"] = "Поиск Person";
    }

    <h1>Результат поиска</h1>
    <div class="text-center" style="display: block; background-color:darkgray">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Отчество</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <th scope="row">@p.Id</th>
                        <td>@p.LastName</td>
                        <td>@p.FirstName</td>
                        <td>@p.MiddleName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr />
    <div class="row" style="margin-left: auto">
        <a href="~/Home" class="btn btn-primary">Назад</a>
    </div>
